<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="active_tab_color">@color/blue</color>
    <color name="inactive_tab_color">#979191</color>


    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/active_tab_color</item>
        <item name="android:colorForeground">@color/inactive_tab_color</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">@color/active_tab_color</item>
    </style>
    <style name="InactiveText">
        <item name="android:textColor">@color/inactive_tab_color</item>
    </style>

</resources>