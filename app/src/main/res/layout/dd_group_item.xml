<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bindViewModel"
            type="com.example.master_of_time.screens.dailyday.group.DdGroupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutHeight_layout_adapterDailyday">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/marginLeft_title_adapterDailyDay"

            android:textSize="@dimen/textSize_adapterDailyDay"
            android:id="@+id/groupName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/marginRight_date_adapterDailyDay"

            android:text="drag"
            android:visibility="visible"
            android:textSize="@dimen/textSize_adapterDailyDay"
            android:id="@+id/drag" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
